@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Dish
<div class"ms-2 mx-2">
    <h1>Edit</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Dish" asp-action="Edit" asp-route-id="@Model.DishID" method="post" class="mt-3">
        <input type="hidden" asp-for="DishID" />
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="DishID" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DishName" class="form-control" placeholder="Dish Name">
            </div>
            <span asp-validation-for="DishName" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" placeholder="Price">
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Making" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Making" class="form-control" placeholder="How to make">
            </div>
            <span asp-validation-for="Making" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Request" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Request" class="form-control" placeholder="Request">
            </div>
            <span asp-validation-for="Request" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </form>
</div>


